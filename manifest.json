{
  "manifest_version": 2,
 
  "name": "YouTube Extension",
  "description": "This extension will Turn Annotation off, Make Player large and you can use spacebar to pause when the video loads",
  "version": "1.0",
 
  "browser_action": {
   "default_icon": "icon.png"
  },
  "background" : {
      "scripts": ["background.js"],
      "matches": ["*://www.youtube.com/*"]
    },
  "content_scripts": [
    {
        "matches": ["*://www.youtube.com/*"],
        "js": ["jquery.min.js","content.js"],
        "run_at": "document_end"
    }
  ],
  "permissions": [
      "activeTab",
      "tabs", "*://www.youtube.com/*"
  ]
}